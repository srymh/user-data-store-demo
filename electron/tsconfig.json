{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "../build",
    "rootDir": "../",
    "noEmitOnError": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowJs": true // in order to use preload.js
